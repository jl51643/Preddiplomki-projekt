<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/wp6398565"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/sign_in_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="340dp"
        android:text="@string/action_sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/register_in_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="340dp"
        android:text="@string/action_register_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sign_in_main" />

    <TextView
        android:id="@+id/text_main"
        android:layout_width="178dp"
        android:layout_height="46dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="28dp"
        android:text="Welcome to the main screen"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>